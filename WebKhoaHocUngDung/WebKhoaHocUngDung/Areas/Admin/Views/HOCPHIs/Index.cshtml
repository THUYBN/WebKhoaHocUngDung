@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebKhoaHocUngDung.Models.HOCPHI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="input-group">
    <input type="text" class="form-control bg-light border-1 small" placeholder="Nhập thông tin học phí muốn tìm kiếm?"
           aria-label="Search" aria-describedby="basic-addon2" style="border-color: #3f51b5;">
    <div class="input-group-append">
        <button class="btn btn-primary" type="button">
            <i class="fas fa-search fa-sm"></i>
        </button>
    </div>
</div>

<br />


<h2 style="color:blue" class="text-center"><b>DANH SÁCH CÁC LOẠI HỌC PHÍ</b></h2>

<p class="m-0 float-md-none btn btn-success btn-sm">
    @Html.ActionLink("Thêm học phí", "Create")

</p>
<br /><br />

<div class="col-xl-12 col-lg-7 mb-4">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th>
                    Tên môn học
                </th>
                <th>
                    Ngày áp dụng
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Số buổi
                </th>
                <th>
                    Sĩ số
                </th>
                <th>
                    Thao tác
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MONHOC.TenMonHoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayApDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)VNĐ
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoBuoi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SiSo)
                </td>
                <td>
                    <li class="btn btn-sm btn-dark">@Html.ActionLink("Sửa", "Edit", new { id = item.MaHP }) </li><br />
                    <li class="btn btn-sm btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.MaHP })</li>
                </td>
            </tr>
        }

    </table>
</div>

@*Create page link*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuPage li {
        display: inline;
    }
</style>