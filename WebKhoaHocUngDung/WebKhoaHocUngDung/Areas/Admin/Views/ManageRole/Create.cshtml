@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 style="color:blue"><b>THÊM QUYỀN</b></h2>

<div class="col-xl-12 col-lg-7 mb-4">
    <hr />

    <div class="col-sm-6">



        @using (Html.BeginForm())

        {

            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">

                <label for="Id">Id</label>

                @Html.TextBoxFor(m => m.Id, new { id = "Id", @class = "form-control", required = "required" })

            </div>

            <div class="form-group">

                <label for="Name">Tên quyền</label>

                @Html.TextBoxFor(m => m.Name, new { id = "Name", @class = "form-control", required = "required" })

            </div>

            <div class="form-group">

                <button type="submit" class="m-0 float-md-none btn btn-success btn-sm">Tạo role</button>

            </div>

        }

    </div>

</div>

