@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<WebKhoaHocUngDung.Models.GIAOVIEN>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="input-group">
    <input type="text" class="form-control bg-light border-1 small" placeholder="Nhập thông tin học viên muốn tìm kiếm?"
           aria-label="Search" aria-describedby="basic-addon2" style="border-color: #3f51b5;">
    <div class="input-group-append">
        <button class="btn btn-primary" type="button">
            <i class="fas fa-search fa-sm"></i>
        </button>
    </div>
</div>
<br />
<h2 style="color:blue" class="text-center"><b>DANH SÁCH GIÁO VIÊN</b></h2>

<p class="m-0 float-md-none btn btn-success btn-sm">
    @Html.ActionLink("Thêm giáo viên", "CreateUser")
</p>
<br /><br />
<div class="col-xl-12 col-lg-7 mb-4">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th>
                    Họ tên
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Phái
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Tài khoản
                </th>
                <th>
                    Thao tác
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTenGV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDTGV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgaySinh)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                    <td>
                        <li class="btn btn-sm btn-dark">@Html.ActionLink("Sửa", "Edit", new { id = item.MaGV }) </li><br />
                        <li class="btn btn-sm btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.MaGV })</li>
                    </td>
                </tr>
            }
        </thead>

    </table>
</div>

@*Create page link*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuPage li {
        display: inline;
    }
</style>
