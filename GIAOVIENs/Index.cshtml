@model IEnumerable<WebKhoaHocUngDung.Models.GIAOVIEN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="input-group">
    <input type="text" class="form-control bg-light border-1 small" placeholder="Nhập thông tin giáo viên muốn tìm kiếm?"
           aria-label="Search" aria-describedby="basic-addon2" style="border-color: #3f51b5;">
    <div class="input-group-append">
        <button class="btn btn-primary" type="button">
            <i class="fas fa-search fa-sm"></i>
        </button>
    </div>
</div>
<h2 style="color:blue">DANH SÁCH GIÁO VIÊN</h2>

<p class="m-0 float-md-none btn btn-success btn-sm">
    @Html.ActionLink("Thêm giáo viên", "Create")
</p>
<div class="col-xl-12 col-lg-7 mb-4">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th>
                    Họ tên giáo viên
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    SĐTNV
                </th>
                <th>
                    Địa chỉ
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTenGV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDTGV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    <li class="btn btn-sm btn-dark">@Html.ActionLink("Edit", "Edit", new { id = item.MaGV }) </li><br />
                    <li class="btn btn-sm btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.MaGV })</li>
                </td>
            </tr>
        }
    </table>
</div>

