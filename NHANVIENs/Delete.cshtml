@model WebKhoaHocUngDung.Models.NHANVIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 style="color:red">BẠN CÓ CHẮC MUỐN XÓA NHÂN VIÊN NÀY?</h2>
<div class="col-xl-12 col-lg-7 mb-4">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên nhân viên
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoTenNV)
        </dd>
        <dt>
            Ngày sinh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt>
            Giới tính
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phai)
        </dd>
        <dt>
            Số điện thoại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SDTNV)
        </dd>
        <dt>
            Địa chỉ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiacChi)
        </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="m-0 float-md-none btn btn-danger btn-sm" /> |
            @Html.ActionLink("Quay trở lại danh sách", "Index")
        </div>
    }
</div>
